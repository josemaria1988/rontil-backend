<div>
  <h1>Productos en tiempo real</h1>

  <form id="formCrearProducto">
    <label for="title">Título:</label>
    <input type="text" id="title" name="title"><br>
    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description"><br>
    <label for="code">Código:</label>
    <input type="text" id="code" name="code"><br>
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price"><br>
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock"><br>
    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category"><br>
    <button type="submit">Crear producto</button>
  </form>
</div>

<h1>Productos en websocket</h1>
<ul id="lista-productos">
  {{#each products}}
    <li>{{this.title}} - {{this.description}} - {{this.price}}</li>
  {{/each}}
</ul>

<div>
  <h1>Lista de productos en HTTP</h1>
  <ul>
    {{#each products}}
    <li>
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      <p>Precio: <strong>${{price}}</strong></p>
      <p>Stock: <strong>{{stock}}</strong></p>
    </li>
    {{/each}}
  </ul>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/realTimeProducts.js"></script>