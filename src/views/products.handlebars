 <hi>Bienvenido {{user.first_name}} ID: {{user._id}}</hi>
<div>
 {{#each products}}
    <div class="gallery" id="products">
      <a href="/products/{{this._id}}">
      <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <p>{{this.price}}</p>
      </a>
      <button class="add-to-cart" data-product-id="{{this._id}}" data-price="{{this.price}}" data-uid="{{../user._id}}">Agregar al carrito</button>
    </div>
{{/each}}
</div>

